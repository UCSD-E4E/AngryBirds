## Makefile for Angry Birds
# Created 07/15/2014
# E4E + REU

GCC = g++
GXXFLAGS = -O2 -std=c++0x
GXXLIBS = `pkg-config --libs opencv`

all: main

main: sample.o BlackLib.o
	$(GCC) $(GXXFLAGS) -o main sample.o BlackLib.o $(GXXLIBS)

test: test.cpp 
	$(GCC) $(GXXFLAGS) -o test test.cpp $(GXXLIBS)

sample.o: sample.cpp
	$(GCC) $(GXXFLAGS) -c sample.cpp

BlackLib.o: BlackLib.cpp
	$(GCC) $(GXXFLAGS) -c BlackLib.cpp

clean:
	rm -rf *.o main test	
